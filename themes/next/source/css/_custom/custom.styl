// Custom styles.
// 黑色的主题
a {
  color: #4078c0;
  border-bottom: none;
  &:hover {
    color: #003984;
    text-decoration: none;
  }
}

// footer
.footer {
  background: #2B2B3C;
  color: #bbb;
}

.header {
  position: relative;
  // font-family: -apple-system,"BlinkMacSystemFont",".SFNSText-Light","PingFang SC","Helvetica Neue","Lucida Grande","Hiragino Sans GB","Segoe UI","Microsoft Yahei",sans-serif;
  background: transparent;
  &::before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    // border-bottom: 1px solid rgba(0, 0, 0, .3);
    opacity: 1;
    // background-image: url('/banner.jpg');
    // background-position: 0 -186px;
    background: rgba(198, 198, 198, .1)
  }
  .site-title {
    color: #9d9d9d;
    font-size: 18px;
    font-weight: normal;
    color: #333;
  }
  .logo-line-before i, .logo-line-after i {
    background: #9d9d9d;
    display: none;
  }
  .header-inner {
    padding: 5px 0;
    width: 70%;
    @media (min-width: 1600px) {
      width: 70%;
    }
  }
  .menu .menu-item a {
    font-size: 15px;
  }
  .menu-item-icon {
    display: none;
  }
  a {
    color: #5C5C5C;
    border-bottom: none;
    animation: all 0.2s ease-in;
    &:hover {
      color: #3D3D3D;
      background: transparent !important;
      text-decoration: none;
    }
  }
}

